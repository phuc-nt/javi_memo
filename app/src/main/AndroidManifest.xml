<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ytasia.dictionary">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />


        <activity
            android:name="com.ytasia.dict.view.activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.ytasia.dict.view.activity.LoginActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.ytasia.dict.view.activity.EntryQuizMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ytasia.dict.view.activity.KanjiQuizMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ytasia.dict.view.activity.EntryViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ytasia.dict.view.activity.KanjiViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ytasia.dict.view.activity.EntryEditActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ytasia.dict.view.activity.EntryAddActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ytasia.dict.view.activity.EntryQuizPlayActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ytasia.dict.view.activity.KanjiQuizPlayActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ytasia.dict.view.activity.UpgradeActivity"
            android:screenOrientation="portrait"></activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
