<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ytasia.ytdict.view.activity.EntryQuizPlayActivity">


    <Button
        android:id="@+id/entry_quiz_answer_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="Answer 4" />

    <Button
        android:id="@+id/entry_quiz_answer_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/entry_quiz_answer_4"
        android:layout_centerHorizontal="true"
        android:text="Answer 3" />

    <Button
        android:id="@+id/entry_quiz_answer_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/entry_quiz_answer_3"
        android:layout_centerHorizontal="true"
        android:text="Answer 2 (false)" />

    <Button
        android:id="@+id/entry_quiz_answer_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/entry_quiz_answer_2"
        android:layout_centerHorizontal="true"
        android:text="Answer 1 (true)" />

    <TextView
        android:id="@+id/entry_quiz_play_your_score_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/your_score_title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/entry_quiz_play_your_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entry_quiz_play_your_score_title"
        android:layout_centerHorizontal="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/entry_quiz_play_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entry_quiz_play_your_score_tv"
        android:layout_centerHorizontal="true"
        android:text="@string/time_title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/entry_quiz_play_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entry_quiz_play_time_title"
        android:layout_centerHorizontal="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/entry_quiz_play_question_entry_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entry_quiz_play_time_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/entry_quiz_play_question_furigana_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entry_quiz_play_question_entry_tv"
        android:layout_centerHorizontal="true"
        android:text="@string/furigana"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/entry_quiz_play_question_furigana_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entry_quiz_play_question_furigana_title"
        android:layout_centerHorizontal="true"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
