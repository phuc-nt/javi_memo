<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ytasia.dictionary.QuizFragment">

    <Button
        android:id="@+id/quiz_select_vocabulary_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/quiz_select_kanji_button"
        android:layout_centerHorizontal="true"
        android:text="@string/quiz_select_vocabulary_button" />

    <Button
        android:id="@+id/quiz_select_kanji_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="105dp"
        android:text="@string/quiz_select_kanji_button" />

    <TextView
        android:id="@+id/record_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:text="@string/record_label"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/vocabulary_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/entry_label"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/kanji_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kanji_label"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/quiz_main_entry_score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="score"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/quiz_main_kanji_score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kanji_label"
                android:text="score"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>
    </TableLayout>


</RelativeLayout>
